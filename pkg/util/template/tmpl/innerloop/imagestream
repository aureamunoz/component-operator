apiVersion: image.openshift.io/v1
kind: ImageStream
metadata:
  labels:
    app: {{.Name}}
  name: {{.Spec.Image.Name}}
spec:
  lookupPolicy:
    local: false
  {{if .Spec.Image.DockerImage}}
  tags:
  - {{if .Spec.Image.AnnotationCmds}}
    annotations:
      cmds: "run-java:/usr/local/s2i/run;compile-java:/usr/local/s2i/assemble;build:/deployments/buildapp"
    {{end}}
    from:
      kind: DockerImage
      name: {{.Spec.Image.Repo}}
    importPolicy: {}
    name: latest
    referencePolicy:
      type: Source
  {{end}}